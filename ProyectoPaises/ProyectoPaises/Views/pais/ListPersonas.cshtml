@model IEnumerable<ProyectoPaises.Models.persona>

<p>
    @Html.ActionLink("Crear nueva persona", "createPersona")
</p>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nbrPersona)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fchNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.paisNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.paisResidencia)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FOTO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ENTREVISTA)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nbrPersona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fchNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.paisNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.paisResidencia)
        </td>

        <td>
            @{
                var imgscr = "Resources/perfil.png";
                if (item.FOTO != null)
                {
                    var base64 = Convert.ToBase64String(item.FOTO);
                    imgscr = string.Format("data:image/png;base64,{0}", base64);
                }
            }
            <img src=@imgscr width="75" height="75" />
        </td>

        <th>

            @{
                var vidscr = "";
                if (item.ENTREVISTA != null)
                {
                    var base64 = Convert.ToBase64String(item.ENTREVISTA);
                    vidscr = string.Format("data:video/mp4;base64,{0}", base64);
                }
            }
            <video src=@vidscr controls width="200" />

        </th>

        <td>
            @Html.ActionLink("Edit", "EditPersona", new { id = item.cedula, id2 = item.paisResidencia }) |
            @Html.ActionLink("Delete", "DeletePersona", new { idPersona = item.cedula, id2 = item.paisResidencia, idPais = ViewBag.idPais, page = ViewBag.PageIndexPersonas })
        </td>
    </tr>
    }

</table>

<ul class="pagination">
    <li>@Ajax.ActionLink("Primero", "ListPersonas", new { idPais = ViewBag.idPais, id = 1 }, new AjaxOptions { UpdateTargetId = "list-personas", InsertionMode = InsertionMode.Replace })</li>
    <li>@Ajax.ActionLink("Anterior", "ListPersonas", new { idPais = ViewBag.idPais, id = (ViewBag.PageIndexPersonas == 1) ? ViewBag.PageCountPersonas : (ViewBag.PageIndexPersonas - 1) }, new AjaxOptions { UpdateTargetId = "list-personas", InsertionMode = InsertionMode.Replace })</li>
    <li><span>Pág. @ViewBag.PageIndexPersonas de @ViewBag.PageCountPersonas</span></li>
    <li>@Ajax.ActionLink("Siguiente", "ListPersonas", new { idPais = ViewBag.idPais, id = (ViewBag.PageIndexPersonas < ViewBag.PageCountPersonas) ? (ViewBag.PageIndexPersonas + 1) : 1 }, new AjaxOptions { UpdateTargetId = "list-personas", InsertionMode = InsertionMode.Replace })</li>
    <li>@Ajax.ActionLink("Ultimo", "ListPersonas", new { idPais = ViewBag.idPais, id = ViewBag.PageCountPersonas }, new AjaxOptions { UpdateTargetId = "list-personas", InsertionMode = InsertionMode.Replace })</li>
</ul>