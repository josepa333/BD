@model IEnumerable<Proyecto_bases.Models.infoArbitros_Result>

@{
    ViewBag.Title = "Arbitros torneo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Arbitros de juegos de temporada @ViewBag.idT y competicion @ViewBag.idC</h2>

<table class="table">
    <tr>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Nombre")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Promedio calificaciones")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD "></th>
    </tr>


    @foreach (var item in Model)
    {
    <tr>

        <td style="background-color:#f2f2f2">

            @Html.DisplayFor(model => item.nombre)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(model => item.promedio)
        </td>

    </tr>
    }
</table>