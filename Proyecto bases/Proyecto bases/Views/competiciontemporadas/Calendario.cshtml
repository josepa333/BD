@model IEnumerable<Proyecto_bases.Models.fechacalendario>

@{
    ViewBag.Title = "Calendario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Calendario de juegos de temporada @ViewBag.idT y competicion @ViewBag.idC</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Fecha")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Competicion")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Temporada")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD "></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.fecha)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(model => item.idcompeticion)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.idtemporada)
        </td>
    </tr>
    }

</table>