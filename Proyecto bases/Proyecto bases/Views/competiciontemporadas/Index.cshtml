@model IEnumerable<Proyecto_bases.Models.competiciontemporada>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Competiciones-Temporadas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Competicion")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Nbr Competicion")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Tipo Competicion")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Temporada")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Nbr Temporada")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD "></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.competicion.idcompeticion)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(model => item.competicion.nombre)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.competicion.tipo)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(model => item.temporada.idtemporada)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.temporada.nombre)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.ActionLink("Edit", "Edit", new { id = item.idcompeticion, id2 = item.idtemporada }) |
            @Html.ActionLink("Details", "Details", new { id = item.idcompeticion, id2 = item.idtemporada }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idcompeticion, id2 = item.idtemporada }) |
            @Html.ActionLink("Generar resultados", "Resultados", new { id = item.idcompeticion, id2 = item.idtemporada }) |
            @Html.ActionLink("Tabla General", "TablaGeneral", new { id = item.idcompeticion, id2 = item.idtemporada }) |
            @Html.ActionLink("Arbitros", "Arbitros", new { id = item.idcompeticion, id2 = item.idtemporada }) |
            @Html.ActionLink("Ver calendario", "AdministrarCalendario", new { id = item.idcompeticion, id2 = item.idtemporada }) |
        </td>
    </tr>
    }

</table>