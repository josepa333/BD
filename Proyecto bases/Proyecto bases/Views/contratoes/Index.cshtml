@model IEnumerable<Proyecto_bases.Models.contrato>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contratos de funcionarios</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayNameFor(model => model.idfuncionario)
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayNameFor(model => model.club.nombre)
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayNameFor(model => model.validez)
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayNameFor(model => model.importe)
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayNameFor(model => model.fchinicio)
        </th>

        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayNameFor(model => model.fchcreacion)
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayNameFor(model => model.usrcreador)
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayNameFor(model => model.fchmodificacion)
        </th>

        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayNameFor(model => model.usrmodificador)
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD "></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="background-color:#f2f2f2">

            @Html.DisplayFor(modelItem => item.idfuncionario)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(modelItem => item.club.nombre)
        </td>
        <td style="background-color:#f2f2f2">

            @Html.DisplayFor(modelItem => item.validez)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(modelItem => item.importe)
        </td>
        <td style="background-color:#f2f2f2">

            @Html.DisplayFor(modelItem => item.fchinicio)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(modelItem => item.fchcreacion)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(modelItem => item.usrcreador)
        </td>
        <td style="background-color:#e0eeFF">

            @Html.DisplayFor(modelItem => item.fchmodificacion)
        </td>

        <td style="background-color:#f2f2f2">

            @Html.DisplayFor(modelItem => item.usrmodificador)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.ActionLink("Edit", "Edit", new { id = item.idclub, id2 = item.idfuncionario, id3 = item.fchfinal }) |
            @Html.ActionLink("Details", "Details", new { id = item.idclub, id2 = item.idfuncionario, id3 = item.fchfinal }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idclub, id2 = item.idfuncionario, id3 = item.fchfinal })
        </td>
    </tr>
}

</table>
