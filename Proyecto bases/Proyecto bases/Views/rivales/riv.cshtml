@model IEnumerable<Proyecto_bases.Models.Rivales_Result>

@{
    ViewBag.Title = "Resultados de partidos jugados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<table class="table">
    <tr>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Club1")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Goles Club1")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Goles Club2")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Club2")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="background-color:#f2f2f2">
                @Html.DisplayFor(model => item.idclubcasa )
            </td>
            <td style="background-color:#e0eeFF">
                @Html.DisplayFor(model => item.golescasa)
            </td>
            <td style="background-color:#f2f2f2">
                @Html.DisplayFor(model => item.golesvisita)
            </td>
            <td style="background-color:#e0eeFF"> 
                @Html.DisplayFor(model => item.idclubvisita)
            </td>
        </tr>
    }
</table>
