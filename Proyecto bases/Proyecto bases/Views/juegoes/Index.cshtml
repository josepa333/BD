@model IEnumerable<Proyecto_bases.Models.juego>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Juegos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Juego")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Club Casa")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Goles Casa")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Club Visita")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Goles Visita")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID calendario")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Usuario creador")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Fecha creacion")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Usuario modificador")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Fecha modificacion")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD "></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.idjuego)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(model => item.idclubcasa)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.golescasa)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(model => item.idclubvisita)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.golesvisita)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(model => item.idcalendario)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.usrcreador)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(model => item.fchcreacion)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(model => item.usrmodificador)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(model => item.fchmodificacion)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.ActionLink("Edit", "Edit", new { id = item.idjuego }) |
            @Html.ActionLink("Details", "Details", new { id = item.idjuego }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idjuego })
        </td>
    </tr>
    }
</table>
