@model IEnumerable<Proyecto_bases.Models.alineacion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alineaciones</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>


        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Funcionario")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Nombre funcionario")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("ID Juego")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Nombre club")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Tipo")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Rendimiento")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Usuario creador")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Fecha creacion")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Usuario modificador")
        </th>
        <th style="background-color:#1A2A40; color:#9CA6AD ">
            @Html.DisplayName("Fecha modificacion")
        </th>

        <th style="background-color:#1A2A40; color:#9CA6AD "></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(modelItem => item.jugador.idfuncionario)
        </td>

        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(modelItem => item.jugador.funcionariodeportivo.nombre)
        </td>

        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(modelItem => item.idjuego)
        </td>

        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(modelItem => item.club.nombre)
        </td>

        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(modelItem => item.tipo)
        </td>

        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(modelItem => item.rendimiento)
        </td>
        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(modelItem => item.usrcreador)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(modelItem => item.fchcreacion)
        </td>

        <td style="background-color:#f2f2f2">
            @Html.DisplayFor(modelItem => item.usrmodificador)
        </td>
        <td style="background-color:#e0eeFF">
            @Html.DisplayFor(modelItem => item.fchmodificacion)
        </td>

        <td style="background-color:#f2f2f2">
            @Html.ActionLink("Edit", "Edit", new { id = item.idfuncionario, id2 = item.idjuego }) |
            @Html.ActionLink("Details", "Details", new { id = item.idfuncionario, id2 = item.idjuego }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idfuncionario, id2 = item.idjuego })
        </td>
    </tr>
}

</table>
