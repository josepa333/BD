@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Crear calendario</h2>
@using (Html.BeginForm("calendarioCreado", "crearCalendario", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            ID Competicion
            @Html.DropDownList("idcompeticion", null, htmlAttributes: new { @class = "form-control", style = "height: 50px;" })
        </div>
        <div class="form-group">
            ID Temporada
            @Html.DropDownList("idtemporada", null, htmlAttributes: new { @class = "form-control", style = "height: 50px;" })
        </div>

        <div class="form-group">
            ID Federacion
            @Html.DropDownList("idfederacion", null, htmlAttributes: new { @class = "form-control", style = "height: 50px;" })
        </div>

        <div>
            <input type="submit" name="btSubmit" value="Submit" />
        </div>
    </div>
}
